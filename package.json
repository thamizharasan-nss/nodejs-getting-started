{
  "name": "nodejs-getting-started",
  "version": "1.0.0",
  "private": true,
  "description": "A production-ready Node.js app using Express with Jest testing",
  "engines": {
    "node": "20.x || 22.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "test:ci": "jest --ci"
  },
  "dependencies": {
    "express": "^5.2.1",
    "ejs": "^4.0.1"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thamizharasan-nss/nodejs-getting-started"
  },
  "keywords": [
    "node",
    "express",
    "ecs",
    "docker",
    "ci-cd"
  ],
  "license": "MIT"
}
